<!DOCTYPE html>
<html>
<head>
<%= javascript_include_tag "application" %> 

<%= csrf_meta_tag %>

</head>  

 <div class="dash-unit container">
          <hr>
            <div id="space"></div>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Tags</th>
      <th>Count</th>
      <th>Supplier</th>
       <% if current_user.present? %>
      <th>Price</th>
      <th>Created At</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.tags %></td>
        <td><%= item.count %></td>
        <td><%= item.supplier %></td>
  <% if current_user.present? %>  
        <td><%= item.stock %></td>
        <td><%= item.created_at %></td>
   <% end %> 
        <td><%= image_tag item.avatar.url(:small)%></td>
  <td><button type="button" class="btn btn-success"><%= link_to 'Show', item %></td></button>
       <td><button type="button" class="btn btn-info"><%= link_to 'Edit', edit_item_path(item) %></td></button>

</tr>
    <% end %>
  </tbody>
</table>

<br>    
   <% if current_user.present? %>
    <button type="button" class="btn btn-primary"> <%= link_to 'New Item', new_item_path %></button>
       <% end %>
       </div>
        </div>
        
     <br><br>
</html>
